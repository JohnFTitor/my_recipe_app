<h2 class="text-white text-center mt-5">Log in</h2>

<div class="container-fluid d-flex flex-column justify-content-center align-items-center p-5">
  <%= form_for(resource, as: resource_name, html: { 'data-turbo': 'false',class: "d-flex flex-column align-items-center container gap-2 mb-2" } , url: session_path(resource_name)) do |f| %>
    <div class="field d-flex flex-column align-items-center mt-3 w-100">
      <%= f.label :email, class: "text-primary fs-5" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-secondary p-2" %>
    </div>

    <div class="field d-flex flex-column align-items-center mt-3 w-100">
      <%= f.label :password, class: "text-primary fs-5" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "border border-secondary p-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field form-check d-flex justify-content-center align-items-center gap-3 mt-3 w-100">
        <%= f.check_box :remember_me, class: "form-check-input" %>
        <%= f.label :remember_me, class: "text-primary fs-5" %>
      </div>
    <% end %>

    <div class="actions d-flex justify-content-center">
      <%= f.submit "Log in", class: "btn btn-primary fw-bold"%>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

